@model FurnitureShop.Models.FurnUserAccount

@{
    Layout = "_AdminLayout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditProfile</title>
</head>
<body>
<h1>@ViewBag.username Profile</h1>
<h4>Edit My Profile </h4>

<hr />
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src=@Url.Content("~/Images/" + Model.ImagePath)
                                     asp-append-version="true" style="border-radius:20%;" width="200" height="200" class="rounded-circle" alt="Admin" />
                                <div class="mt-3">
                                    <h4>@Model.Fullname</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="EditProfile" method="POST" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="Fullname" class="control-label"></label>
                                <input asp-for="Fullname" class="form-control" />
                                <span asp-validation-for="Fullname" class="text-danger"></span>
                            </div>
                            <input hidden asp-for="ImagePath" value="@Model.ImagePath" class="form-control" />
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <input asp-for="ImageFile" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="control-label"></i></label>
                                <input class="form-control" type="password" name="pass" id="pass" placeholder="Password" />
                            </div>
                            <hr />
                            <div class="form-group form-button d-grid gap-2 d-md-block">
                                <input type="submit" name="signup" id="signup" class="form-submit btn btn-primary " value="EditProfile" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
