@model IEnumerable<FurnitureShop.Models.FurnCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";

}

<h1>Index</h1>
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        margin: 1rem;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card a {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 50%;
        font-size: 18px;
    }

        .card a:hover {
            opacity: 0.7;
        }
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4">
            <div class="card">
                <img src=@Url.Content("~/Images/" + item.Imagepath)
                 asp-append-version="true" style="width:150; height:250px;">
                <h2>@item.CategoryName</h2>
                <p><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a></p>
                <p><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a></p>
                <p><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></p>
                <p><a asp-action="Products" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-primary">View products</a></p>


            </div>
        </div>
    }
</div>
